<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="guru.nickthompson.livethread.PostActivity">

    <ProgressBar
        android:id="@+id/pb_post_refresh"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:layout_marginTop="-7dp"
        android:max="1000"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_post_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/b_post_add_comment_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addCommentTest"
            android:text="add new comment" />

        <Button
            android:id="@+id/b_post_update_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="updateComments"
            android:text="update comments" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_post_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>