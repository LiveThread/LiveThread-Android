<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.livethread">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LiveThreadApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Used by JRAW-Android -->
        <meta-data
            android:name="net.dean.jraw.android.REDDIT_USERNAME"
            android:value="rillweed and inickt" />
        <meta-data
            android:name="net.dean.jraw.android.CLIENT_ID"
            android:value="ZNyXFcDBJ0TNBQ" />
        <meta-data
            android:name="net.dean.jraw.android.REDIRECT_URL"
            android:value="https://livethread.github.io/authenticate/" />

        <activity android:name=".NewUserActivity"></activity>
    </application>

</manifest>